<p style='margin-left: 2em'>	

	var x, squ;<br><br>
 
	procedure square;<br>
	begin
	  <p1 style='margin-left: 2em'> squ = x * x</p1>
	end;<br>
	 
	begin
	 <p3 style='margin-left: 2em'>  x = 1 - 4 - 2;<br>
	   while x <= 10 do<br>
	   begin
	     <p2 style='margin-left: 2em'> call square;<br>
	      x = x + 1<br></p2>
	   end<br></p3>
	end. <br> <br></p>

